- # app/views/recruiters/_form.html.haml

- presenter = present(recruiter)

= form_for recruiter, :builder => BootstrapHorizontalFormBuilder do |form|
  = form.form_group :name do
    = form.text_field :name, :autofocus => true
  = form.form_group :agency do
    = form.text_field :agency
  = form.form_group :email do
    = form.email_field :email
  = form.form_group do
    = form.submit recruiter.persisted? ? 'Update Recruiter' : 'Create Recruiter'
    = form.button 'Cancel', recruiter.persisted? ? recruiter_path(recruiter) : recruiters_path
